<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".StatusRequestActivity">

  <Button
    android:id="@+id/btn_ContactUs2"
    android:layout_width="119dp"
    android:layout_height="41dp"
    android:layout_marginStart="18dp"
    android:layout_marginEnd="164dp"
    android:onClick="onClick"
    android:text="יצירת קשר"
    app:layout_constraintEnd_toStartOf="@+id/title"
    app:layout_constraintStart_toStartOf="parent"
    tools:layout_editor_absoluteY="54dp" />

  <TextView
    android:id="@+id/case_num"
    android:layout_width="245dp"
    android:layout_height="38dp"
    android:layout_marginStart="83dp"
    android:layout_marginTop="112dp"
    android:layout_marginEnd="83dp"
    android:layout_marginBottom="581dp"
    android:textSize="20sp"
    android:textStyle="bold"
    android:visibility="visible"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <View
    android:id="@+id/line4"
    android:layout_width="2dp"
    android:layout_height="0dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:background="#757575"
    app:layout_constraintBottom_toTopOf="@id/statusSecond4"
    app:layout_constraintEnd_toEndOf="@+id/statusSecond3"
    app:layout_constraintStart_toStartOf="@+id/statusSecond3"
    app:layout_constraintTop_toBottomOf="@+id/statusSecond3" />

  <View
    android:id="@+id/line3"
    android:layout_width="2dp"
    android:layout_height="0dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:background="#757575"
    app:layout_constraintBottom_toTopOf="@id/statusSecond3"
    app:layout_constraintEnd_toEndOf="@+id/statusSecond2"
    app:layout_constraintStart_toStartOf="@+id/statusSecond2"
    app:layout_constraintTop_toBottomOf="@+id/statusSecond2" />

  <TextView
    android:id="@+id/title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="302dp"
    android:layout_marginEnd="30dp"
    android:text="סטטוס בקשה"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    tools:layout_editor_absoluteY="64dp" />

  <View
    android:id="@+id/line"
    android:layout_width="2dp"
    android:layout_height="0dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:background="#757575"
    app:layout_constraintBottom_toTopOf="@+id/statusSecond"
    app:layout_constraintEnd_toEndOf="@+id/statusFirst"
    app:layout_constraintStart_toStartOf="@+id/statusFirst"
    app:layout_constraintTop_toBottomOf="@+id/statusFirst" />


  <TextView
    android:id="@+id/oneLevelText"
    android:layout_width="182dp"
    android:layout_height="23dp"
    android:text="המסמכים הועלו למערכת"
    android:textColor="@color/black"
    android:textSize="16sp"
    android:textStyle="bold"
    app:layout_constraintBottom_toTopOf="@id/viewPlacedSupporter"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toEndOf="@+id/ImgDocPlaced2" />

  <View
    android:id="@+id/viewDivider"
    android:layout_width="match_parent"
    android:layout_height="2dp"
    android:layout_marginTop="30dp"
    app:layout_constraintTop_toBottomOf="@+id/case_num" />

  <View
    android:id="@+id/statusSecond3"
    android:layout_width="20dp"
    android:layout_height="20dp"
    android:layout_marginStart="30dp"
    android:background="@drawable/shape_status_remaining"
    app:layout_constraintBottom_toBottomOf="@+id/imgDocPlaced2"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="@id/imgDocPlaced2" />

  <View
    android:id="@+id/statusSecond4"
    android:layout_width="20dp"
    android:layout_height="20dp"
    android:layout_marginStart="30dp"
    android:background="@drawable/shape_status_remaining"
    app:layout_constraintBottom_toBottomOf="@+id/imgDocPlaced3"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="@+id/imgDocPlaced3" />

  <View
    android:id="@+id/view2"
    android:layout_width="1dp"
    android:layout_height="1dp"
    app:layout_constraintBottom_toBottomOf="@+id/imgDocPlaced3"
    app:layout_constraintEnd_toEndOf="@+id/imgDocPlaced3"
    app:layout_constraintStart_toStartOf="@+id/imgDocPlaced3"
    app:layout_constraintTop_toTopOf="@+id/imgDocPlaced3" />

  <View
    android:id="@+id/statusFirst"
    android:layout_width="20dp"
    android:layout_height="20dp"
    android:layout_marginStart="30dp"
    android:background="@drawable/shape_status_completed"
    app:layout_constraintBottom_toBottomOf="@+id/ImgDocPlaced2"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="@+id/ImgDocPlaced2" />

  <ImageView
    android:id="@+id/ImgDocPlaced"
    android:layout_width="63dp"
    android:layout_height="71dp"

    android:layout_marginStart="60dp"
    android:layout_marginTop="12dp"
    android:src="@drawable/one"
    app:layout_constraintStart_toEndOf="@+id/statusSecond"
    app:layout_constraintTop_toBottomOf="@+id/ImgDocPlaced2" />

  <View
    android:id="@+id/ViewImgDocPlacedSupporter"
    android:layout_width="1dp"
    android:layout_height="1dp"
    app:layout_constraintBottom_toBottomOf="@+id/ImgDocPlaced"
    app:layout_constraintEnd_toEndOf="@+id/ImgDocPlaced"
    app:layout_constraintStart_toStartOf="@+id/ImgDocPlaced"
    app:layout_constraintTop_toTopOf="@+id/ImgDocPlaced" />

  <View
    android:id="@+id/statusSecond2"
    android:layout_width="20dp"
    android:layout_height="20dp"
    android:layout_marginStart="30dp"
    android:background="@drawable/shape_status_remaining"
    app:layout_constraintBottom_toBottomOf="@+id/imgDocPlaced"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="@+id/imgDocPlaced" />

  <View
    android:id="@+id/lev3suporter"
    android:layout_width="1dp"
    android:layout_height="1dp"
    app:layout_constraintBottom_toBottomOf="@+id/imgDocPlaced"
    app:layout_constraintEnd_toEndOf="@+id/imgDocPlaced"
    app:layout_constraintStart_toStartOf="@+id/imgDocPlaced"
    app:layout_constraintTop_toTopOf="@+id/imgDocPlaced" />


  <ImageView
    android:id="@+id/imgDocPlaced2"
    android:layout_width="63dp"
    android:layout_height="71dp"
    android:layout_marginStart="64dp"
    android:layout_marginTop="28dp"
    android:contentDescription="@string/app_name"
    android:src="@drawable/tree"
    app:layout_constraintStart_toEndOf="@id/statusSecond3"
    app:layout_constraintTop_toBottomOf="@+id/imgDocPlaced" />

  <View
    android:id="@+id/lev4suporter"
    android:layout_width="1dp"
    android:layout_height="1dp"
    app:layout_constraintBottom_toBottomOf="@+id/imgDocPlaced2"
    app:layout_constraintEnd_toEndOf="@+id/imgDocPlaced2"
    app:layout_constraintStart_toStartOf="@+id/imgDocPlaced2"
    app:layout_constraintTop_toTopOf="@+id/imgDocPlaced2" />


  <ImageView
    android:id="@+id/imgDocPlaced"
    android:layout_width="70dp"
    android:layout_height="71dp"
    android:layout_marginStart="60dp"
    android:layout_marginTop="28dp"
    android:contentDescription="@string/app_name"
    android:src="@drawable/four"
    app:layout_constraintStart_toEndOf="@+id/statusSecond2"
    app:layout_constraintTop_toBottomOf="@+id/ImgDocPlaced" />

  <TextView
    android:id="@+id/oneLevelText4"
    android:layout_width="180dp"
    android:layout_height="23dp"
    android:text="הדרכון בתהליך הנפקה"
    android:textColor="@color/black"
    android:textSize="16sp"
    android:textStyle="bold"
    app:layout_constraintBottom_toTopOf="@+id/statusSecond3"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toEndOf="@+id/imgDocPlaced2" />

  <ImageView
    android:id="@+id/imgDocPlaced3"
    android:layout_width="63dp"
    android:layout_height="71dp"
    android:layout_marginStart="64dp"
    android:layout_marginTop="32dp"
    android:contentDescription="@string/app_name"
    android:src="@drawable/five"
    app:layout_constraintStart_toEndOf="@+id/statusSecond4"
    app:layout_constraintTop_toBottomOf="@+id/imgDocPlaced2" />

  <ImageView
    android:id="@+id/ImgDocPlaced2"
    android:layout_width="63dp"
    android:layout_height="71dp"
    android:layout_marginStart="60dp"
    android:layout_marginTop="44dp"
    android:contentDescription="@string/app_name"
    android:src="@drawable/two"
    app:layout_constraintStart_toEndOf="@+id/statusFirst"
    app:layout_constraintTop_toBottomOf="@id/viewDivider" />

  <View
    android:id="@+id/viewPlacedSupporter"
    android:layout_width="1dp"
    android:layout_height="1dp"
    app:layout_constraintBottom_toBottomOf="@+id/ImgDocPlaced2"
    app:layout_constraintEnd_toEndOf="@+id/ImgDocPlaced2"
    app:layout_constraintStart_toStartOf="@+id/ImgDocPlaced2"
    app:layout_constraintTop_toTopOf="@+id/ImgDocPlaced2" />


  <View
    android:id="@+id/statusSecond"
    android:layout_width="20dp"
    android:layout_height="20dp"
    android:layout_marginStart="30dp"
    android:background="@drawable/shape_status_current"
    app:layout_constraintBottom_toBottomOf="@+id/ImgDocPlaced"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="@+id/ImgDocPlaced" />

  <TextView
    android:id="@+id/oneLevelText2"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:text="המסמכים ממתינים לבדיקה"
    android:textColor="@color/black"
    android:textSize="16sp"
    android:textStyle="bold"
    app:layout_constraintBottom_toTopOf="@id/ViewImgDocPlacedSupporter"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toEndOf="@+id/ImgDocPlaced" />

  <TextView
    android:id="@+id/oneLevelText3"
    android:layout_width="170dp"
    android:layout_height="23dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:text="המסמכים בשלב ניתוח"
    android:textColor="@color/black"
    android:textSize="16sp"
    android:textStyle="bold"
    app:layout_constraintBottom_toTopOf="@+id/lev3suporter"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toEndOf="@+id/imgDocPlaced" />

  <View
    android:id="@+id/line2"
    android:layout_width="2dp"
    android:layout_height="0dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:background="#757575"
    app:layout_constraintBottom_toTopOf="@+id/statusSecond2"
    app:layout_constraintEnd_toEndOf="@+id/statusSecond"
    app:layout_constraintStart_toStartOf="@+id/statusSecond"
    app:layout_constraintTop_toBottomOf="@+id/statusSecond" />

  <TextView
    android:id="@+id/oneLevelText5"
    android:layout_width="130dp"
    android:layout_height="23dp"
    android:text="הדרכון בדרך אליך"
    android:textColor="@color/black"
    android:textSize="16sp"
    android:textStyle="bold"
    app:layout_constraintBottom_toTopOf="@+id/statusSecond4"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="@+id/imgDocPlaced3" />

</androidx.constraintlayout.widget.ConstraintLayout>