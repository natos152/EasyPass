<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".ValidationProcess">

  <TextView
    android:id="@+id/textView4"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="10dp"
    android:text=" בירור זכאות לדרכון פורטוגלי"
    android:textColor="#F44336"
    android:textStyle="bold" />


  <Button
    android:id="@+id/cont_btn"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:layout_marginBottom="250dp"
    android:onClick="onClick"
    android:text="המשך"
    tools:layout_editor_absoluteX="164dp"
    tools:layout_editor_absoluteY="645dp" />

  <TextView
    android:id="@+id/textView6"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/textView4"
    android:layout_alignParentRight="true"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    android:text="א. האם סבא ממוצא של אחת המדינות הנ''ל?" />

  <TextView
    android:id="@+id/textView14"
    android:layout_width="383dp"
    android:layout_height="43dp"
    android:linksClickable="true"
    android:text="ב. האם אתה מופיע ברשימת שמות המשפחה שפורסמו ע''י ממשלת פורטוגול"
    android:textAlignment="viewEnd"
    android:layout_below="@id/textView15" />

  <TextView
    android:id="@+id/linkLastName"
    android:layout_width="387dp"
    android:layout_height="43dp"
    android:linksClickable="true"
    android:text="לחץ כאן"
    android:textColor="#0000FF"
    android:textAlignment="center"
    android:layout_below="@id/textView14" />

  <TextView
    android:id="@+id/textView13"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/linkLastName"
    android:layout_centerHorizontal="true"
    android:text="האם אתה עונה על כל הקריטריונים?" />

  <TextView
    android:id="@+id/textView8"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="2.תורכיה"
    android:layout_alignEnd="@id/textView6"
    android:layout_below="@id/textView7" />

  <TextView
    android:id="@+id/textView10"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="4.לוב"
    android:layout_alignEnd="@id/textView6"
    android:layout_below="@id/textView9"
    />

  <TextView
    android:id="@+id/textView11"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="5.תוניסיה"
    android:layout_alignEnd="@id/textView6"
    android:layout_below="@id/textView10" />

  <TextView
    android:id="@+id/textView12"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="6.אלג'יר"
    android:layout_alignEnd="@id/textView6"
    android:layout_below="@id/textView11" />

  <TextView
    android:id="@+id/textView15"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="7.תורכיה"
    android:layout_alignEnd="@id/textView6"
    android:layout_below="@id/textView12" />

  <TextView
    android:id="@+id/textView9"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="3.מצריים"
    android:layout_alignEnd="@id/textView6"
    android:layout_below="@id/textView8"
    />

  <TextView
    android:id="@+id/textView7"
    android:layout_width="61dp"
    android:layout_height="27dp"
    android:text="1. מרוקו"
    android:layout_alignEnd="@id/textView6"
    android:layout_below="@id/textView6"/>

  <RadioGroup
    android:id="@+id/radioAnswers"
    android:orientation="horizontal"
    android:layout_centerHorizontal="true"
    android:layout_below="@id/textView13"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RadioButton
      android:id="@+id/radioNo"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp"
      android:layout_marginRight="10dp"
      android:text="לא"
      tools:layout_editor_absoluteX="148dp"
      tools:layout_editor_absoluteY="554dp" />

    <RadioButton
      android:id="@+id/radioYes"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp"
      android:layout_marginRight="10dp"
      android:checked="true"
      android:text="כן"
      tools:layout_editor_absoluteX="0dp"
      tools:layout_editor_absoluteY="99dp" />

  </RadioGroup>




</RelativeLayout>