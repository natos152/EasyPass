<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@drawable/new_one"
  tools:context=".SignUpActivity">

  <EditText
    android:id="@+id/sign_user"
    android:layout_width="280dp"
    android:layout_height="0dp"
    android:layout_marginBottom="8dp"
    android:layout_weight="2"
    android:hint="שם משתמש"
    android:textColorHint="@color/cardview_dark_background"

    app:layout_constraintBottom_toTopOf="@+id/sign_pass"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/sign_email" />

  <EditText
    android:id="@+id/sign_pass"
    android:layout_width="280dp"
    android:layout_height="0dp"
    android:layout_marginBottom="6dp"
    android:layout_weight="2"
    android:hint="סיסמא"
    android:inputType="textPassword"
    android:textAlignment="textEnd"
    android:textColorHint="@color/cardview_dark_background"
    app:layout_constraintBottom_toTopOf="@+id/sign_confirm_pass"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/sign_user" />

  <Button
    android:id="@+id/btn_sign_up_cont"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="428dp"
    android:layout_marginBottom="255dp"
    android:backgroundTint="#15720F"
    android:onClick="onClick"
    android:text="סיים הרשמה"
    android:textSize="18sp"
    android:textStyle="bold"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.5"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <TextView
    android:id="@+id/textView3"
    android:layout_width="269dp"
    android:layout_height="40dp"
    android:layout_marginTop="42dp"
    android:layout_marginBottom="28dp"
    android:text="הרשמת משתמש חדש"
    android:textAlignment="center"
    android:textColor="@color/teal_700"
    android:textDirection="firstStrongRtl"
    android:textSize="22sp"
    android:textStyle="bold"
    android:visibility="visible"
    app:layout_constraintBottom_toTopOf="@+id/sign_email"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <EditText
    android:id="@+id/sign_confirm_pass"
    android:layout_width="280dp"
    android:layout_height="0dp"
    android:layout_marginBottom="26dp"
    android:layout_weight="2"
    android:hint="הזן סיסמא שוב"
    android:inputType="textPassword"
    android:textAlignment="textEnd"
    android:textColorHint="@color/cardview_dark_background"
    app:layout_constraintBottom_toTopOf="@+id/btn_sign_up_cont"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/sign_pass" />

  <EditText
    android:id="@+id/sign_email"
    android:layout_width="280dp"
    android:layout_height="0dp"
    android:layout_marginBottom="6dp"
    android:layout_weight="2"
    android:hint="אימייל"
    android:textColorHint="@color/cardview_dark_background"
    app:layout_constraintBottom_toTopOf="@+id/sign_user"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/textView3" />

  <androidx.constraintlayout.widget.Guideline
    android:id="@+id/guideline4"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:layout_constraintGuide_begin="20dp" />

</androidx.constraintlayout.widget.ConstraintLayout>